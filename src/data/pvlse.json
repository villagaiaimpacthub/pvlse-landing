      ],
      "social": [
        { "label": "X", "href": "https://x.com/pvlse" },
        { "label": "LinkedIn", "href": "https://linkedin.com/company/pvlse" }
      ]
    }
  },
  "layout": {
    "order": [
      "Navbar",
      "Hero",
      "Moments",
      "Why",
      "WellbeingProductivity",
      "Benefits",
      "Features",
      "ROI",
      "Pricing",
      "LogoStrip",
      "FAQ",
      "CtaFinal",
      "Footer"
    ]
  },
  "interactions": {
    "scrollReveal": {
      "enabled": true,
      "once": true,
      "threshold": 0.15,
      "staggerMs": 60,
      "animation": "fade-up"
    },
    "parallax": {
      "enabled": true,
      "elements": ["Hero.orbs"],
      "strength": 8
    },
    "hoverEffects": {
      "buttons": { "scale": 1.02, "shadow": "hard" },
      "cards": { "translateY": -4, "shadow": "hard", "glow": true }
    },
    "cursor": { "followSoft": true, "intensity": 0.06 },
    "prefersReducedMotion": {
      "respect": true,
      "disableParallax": true,
      "disableAutoReveal": true
    },
    "focus": { "ring": true, "ringColor": "#7C5CFF", "ringWidth": 2 }
  },
  "forms": {
    "demo": {
      "fields": [
        { "name": "name", "label": "Executive name", "type": "text", "required": true },
        { "name": "title", "label": "Title/Role", "type": "text", "required": true },
        { "name": "email", "label": "Corporate email", "type": "email", "required": true },
        { "name": "company", "label": "Organization", "type": "text", "required": true },
        { "name": "teamSize", "label": "Organization size", "type": "select", "options": ["100-500", "500-1,000", "1,000-5,000", "5,000-10,000", "10,000+"] },
        { "name": "budget", "label": "Annual budget range", "type": "select", "options": ["$60K-$120K", "$120K-$300K", "$300K-$500K", "$500K+"] },
        { "name": "message", "label": "Current workforce challenges", "type": "textarea" }
      ],
      "submit": { "label": "Schedule enterprise consultation" },
      "success": { "title": "Thank you!", "body": "Our enterprise team will contact you within 24 hours to schedule your consultation." }
    }
  },
  "accessibility": {
    "contrastMin": 4.5,
    "skipToContent": true,
    "ariaLabels": {
      "primaryNavigation": "Main navigation",
      "hero": "Intro section",
      "ctaPrimary": "Request a demo"
    },
    "keyboardFocusRing": true
  },
  "analytics": {
    "provider": "plausible",
    "events": [
      { "name": "cta_clicked", "on": ["Hero.primaryCta", "ctaFinal.primaryCta"] },
      { "name": "scroll_depth_50", "on": "viewport" },
      { "name": "demo_submitted", "on": "forms.demo.submit" }
    ]
  },
  "performance": {
    "lazyLoadMedia": true,
    "imageWidths": [400, 800, 1200, 1600, 2000],
    "fontLoading": "swap",
    "preloadFonts": ["Inter-Variable.woff2"],
    "minify": true,
    "deferNonCriticalScripts": true
  }
}