          "visual": { "kind": "image", "asset": "/assets/moments/followups.png", "alt": "Meeting ends, tasks appear" }
        },
        {
          "title": "Answers without hunting",
          "body": "Just ask — PVLSE knows. No files. No tabs. No digging.",
          "motion": { "type": "fade-up", "delayMs": 120 },
          "visual": { "kind": "image", "asset": "/assets/moments/answers.png", "alt": "Ask a question, instant answer" }
        },
        {
          "title": "Money clarity on tap",
          "body": "See the truth in the numbers before anyone else does.",
          "motion": { "type": "fade-up", "delayMs": 180 },
          "visual": { "kind": "image", "asset": "/assets/moments/money.png", "alt": "Financial snapshot appears" }
