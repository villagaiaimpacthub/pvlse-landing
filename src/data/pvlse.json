{
  "meta": {
    "siteName": "PVLSE",
    "language": "en",
    "themeDefault": "dark",
    "colorScheme": "auto",
    "favicon": "/assets/favicon.svg"
  },
  "seo": {
    "title": "PVLSE — AI Insurance for Futures Worth Living",
    "description": "PVLSE removes busywork, protects workloads, and invests in growth. A wellbeing-first AI that makes teams happier and more productive.",
    "og": {
      "title": "PVLSE — AI Insurance",
      "description": "Protect your people. Power your future.",
      "image": "/assets/og.jpg"
    },
    "twitter": {
      "card": "summary_large_image",
      "creator": "@pvlse"
    }
  },
  "brand": {
    "name": "PVLSE",
    "voice": {
      "tone": "calm, human, confident",
      "rules": [
        "Short sentences.",
        "No jargon.",
        "Speak to people, not personas."
      ]
    }
  },
  "breakpoints": { "sm": 640, "md": 768, "lg": 1024, "xl": 1280, "2xl": 1536 },
  "tokens": {
    "colors": {
      "background": "#0B0B0C",
      "surface": "#111214",
      "panel": "#17181B",
      "elevated": "#1D1F23",
      "textPrimary": "#F6F7FA",
      "textSecondary": "#C9CED6",
      "muted": "#9AA3AF",
      "accent": "#7C5CFF",
      "accentHover": "#6A4BFF",
      "accentSoft": "rgba(124,92,255,0.18)",
      "success": "#22C55E",
      "warning": "#F59E0B",
      "danger": "#EF4444",
      "border": "rgba(255,255,255,0.10)",
      "hairline": "rgba(255,255,255,0.06)"
    },
    "typography": {
      "fontPrimary": "Inter, -apple-system, system-ui, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
      "fontMono": "IBM Plex Mono, ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace",
      "scale": {
        "hero": 64,
        "h1": 48,
        "h2": 36,
        "h3": 28,
        "h4": 22,
        "body": 16,
        "small": 14,
        "micro": 12
      },
      "leading": { "tight": 1.1, "snug": 1.2, "normal": 1.45, "relaxed": 1.6 },
      "weight": { "regular": 400, "medium": 500, "semibold": 600, "bold": 700 }
    },
    "spacing": {
      "xxs": 4, "xs": 8, "sm": 12, "md": 16, "lg": 24, "xl": 32, "xxl": 48, "section": 96
    },
    "radii": { "xs": 6, "sm": 10, "md": 14, "lg": 18, "xl": 24, "pill": 999 },
    "shadows": {
      "soft": "0 8px 24px rgba(0,0,0,0.25)",
      "hard": "0 12px 48px rgba(0,0,0,0.35)",
      "glow": "0 0 0 8px rgba(124,92,255,0.18)"
    },
    "zIndex": { "base": 1, "nav": 50, "modal": 100, "overlay": 90 }
  },
  "motion": {
    "durations": { "fast": 120, "base": 200, "slow": 320, "slower": 480 },
    "easing": {
      "standard": "cubic-bezier(0.2, 0.8, 0.2, 1)",
      "enter": "cubic-bezier(0.16, 1, 0.3, 1)",
      "exit": "cubic-bezier(0.7, 0, 0.84, 0)"
    },
    "spring": { "stiffness": 220, "damping": 26, "mass": 1 }
  },
  "grid": {
    "containerMax": 1200,
    "gutter": 24,
    "columns": 12
  },
  "assets": {
    "images": {
      "logoLight": "/assets/pvlse-logo-light.svg",
      "logoDark": "/assets/pvlse-logo-dark.svg",
      "uiDailyBriefing": "/assets/ui-daily-briefing.png",
      "uiPriorityGraph": "/assets/ui-priority-graph.png",
      "uiFinanceLens": "/assets/ui-finance-lens.png"
    },
    "lottie": {
      "heroOrbs": "/assets/lottie/hero-orbs.json",
      "confettiSoft": "/assets/lottie/confetti.json"
    }
  },
  "components": {
    "Navbar": {
      "sticky": true,
      "background": "rgba(11,11,12,0.6)",
      "backdropBlur": 10,
      "links": ["Product", "Why PVLSE", "How It Works", "Pricing", "FAQ"],
      "cta": { "label": "Enterprise Consultation", "variant": "primary" },
      "hoverUnderline": true
    },
    "Button": {
      "base": {
        "radius": "pill",
        "paddingY": 14,
        "paddingX": 22,
        "fontWeight": "semibold",
        "shadow": "hard"
      },
      "variants": {
        "primary": { "bg": "accent", "bgHover": "accentHover", "text": "textPrimary" },
        "secondary": { "bg": "transparent", "border": "border", "text": "textPrimary" },
        "ghost": { "bg": "transparent", "text": "textSecondary" }
      },
      "microinteraction": {
        "scaleOnHover": 1.02,
        "translateYOnPress": 1,
        "ripple": false
      }
    },
    "Card": {
      "bg": "panel",
      "border": "hairline",
      "radius": "xl",
      "padding": 24,
      "shadow": "soft",
      "hover": { "shadow": "hard", "translateY": -4 }
    },
    "Hero": {
      "background": {
        "type": "radial-gradient",
        "value": "radial-gradient(80% 100% at 50% 0%, rgba(124,92,255,0.22) 0%, rgba(124,92,255,0) 60%), #0B0B0C"
      },
      "orbs": {
        "lottie": "heroOrbs",
        "parallax": { "strength": 8, "tilt": 2 }
      },
      "headline": { "size": "hero", "weight": "bold", "color": "textPrimary" },
      "subhead": { "size": "h4", "weight": "regular", "color": "textSecondary", "maxWidth": 720 },
      "ctas": [
        { "label": "Get a Demo", "variant": "primary" },
        { "label": "See How It Works", "variant": "secondary" }
      ],
      "microanimations": {
        "reveal": { "type": "fade-up", "delayMs": 80 },
        "accentPulse": { "type": "soft-pulse", "target": "accentSoft", "intervalMs": 2600 }
      }
    },
    "LogoStrip": {
      "opacity": 0.75,
      "gap": 32,
      "autoscroll": { "speed": 12, "pauseOnHover": true }
    },
    "Section": { "padY": "section", "titleSize": "h2", "maxWidth": 760 },
    "FeatureList": {
      "layout": "3up",
      "iconStyle": "duotone",
      "itemHover": { "raise": 3, "glow": true }
    },
    "Steps": {
      "style": "numbered",
      "connector": "soft-line",
      "reveal": "stagger-fade-up"
    },
    "Quote": {
      "style": "large",
      "avatarShape": "circle",
      "bg": "elevated"
    },
    "Stats": { "numberSize": 40, "kpiAccent": "accent" },
    "Pricing": {
      "cards": ["Professional", "Enterprise", "Global Enterprise"],
      "badge": { "bg": "accentSoft", "text": "accent" }
    },
    "FAQ": { "accordion": true, "icon": "chevron" },
    "Footer": {
      "columns": 4,
      "bg": "#0A0A0B",
      "borderTop": "hairline",
      "legal": "© 2025 PVLSE. All rights reserved."
    }
  },
  "content": {
    "nav": [
      { "label": "Product", "href": "#product" },
      { "label": "Why PVLSE", "href": "#why" },
      { "label": "The PVLSE Effect", "href": "#moments" },
      { "label": "Pricing", "href": "#pricing" },
      { "label": "FAQ", "href": "#faq" }
    ],
    "hero": {
      "kicker": "PVLSE",
      "headlineLines": ["Enterprise AI Insurance.", "Protecting your most valuable assets — your people."],
      "subhead": "Mission-critical workforce protection for Fortune 500 companies. PVLSE's advanced AI prevents burnout, predicts turnover, and optimizes human capital — delivering millions in measurable value through predictive wellness analytics and enterprise-grade workforce intelligence.",
      "primaryCta": { "label": "Schedule Enterprise Consultation", "href": "#demo" },
      "secondaryCta": { "label": "See Enterprise Features", "href": "#how" }
    },
    "logos": { 
      "items": [
        { "name": "Fvtura", "src": "/logos/fvtura-logo-2021-white-3.png", "alt": "Fvtura", "href": "https://fvtura.com" },
        { "name": "GaiaNet", "src": "/logos/gaianet-symbol.png", "alt": "GaiaNet", "href": "https://gaianet.earth" },
        { "name": "TechBricks", "src": "/logos/logo-techbricks-bianco.svg", "alt": "TechBricks", "href": "https://techbricks.io" },
        { "name": "Metaluck", "src": "/logos/Logo - Metaluck 2024.e69a41a201bb5d89d0a8.png", "alt": "Metaluck", "href": "https://metalucks.com" },
        { "name": "SGAIA", "src": "/logos/SGAIA-logo-20241129-bianco.png", "alt": "SGAIA", "href": "https://sgaia.it" }
      ] 
    },
    "moments": {
      "id": "moments",
      "title": "It feels like this",
      "kicker": "The PVLSE Effect",
      "items": [
        {
          "title": "Follow-ups already done",
          "body": "End the call. The notes are written, the tasks assigned, responsibilities crystal clear.",
